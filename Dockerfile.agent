FROM node:20-alpine

WORKDIR /app

# Dependencies kopieren
COPY package*.json ./

# Dependencies installieren
RUN npm ci --only=production

# Code kopieren
COPY chatgpt-agent/ ./chatgpt-agent/
COPY config.js ./

# Port freigeben
EXPOSE 4000

# Server starten
CMD ["node", "chatgpt-agent/server.js"]

