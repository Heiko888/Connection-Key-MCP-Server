# Reading Agent Production Environment
# Kopieren Sie diese Datei zu .env und füllen Sie die Werte aus

# OpenAI API Key (erforderlich)
OPENAI_API_KEY=

# Agent Secret für Authentifizierung (optional, aber empfohlen)
AGENT_SECRET=

# MCP Agent Port
MCP_PORT=4000

# Knowledge Base Pfad
KNOWLEDGE_PATH=./production/knowledge

# Template Pfad
TEMPLATE_PATH=./production/templates

# Logs Pfad
LOGS_PATH=./production/logs

# Log Level (info, debug, error)
LOG_LEVEL=info

# Node Environment
NODE_ENV=production

